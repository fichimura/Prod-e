%h1 Listing lessons

%table
  %thead
    %tr
      %th Titulo
      %th Conteudo
      %th Course
      %th
      %th
      %th

  %tbody
    - @lessons.each do |lesson|
      %tr
        %td= lesson.titulo
        %td= lesson.conteudo
        %td= lesson.course
        %td= link_to 'Detalhes', lesson
        %td= link_to 'Editar', edit_lesson_path(lesson)
        %td= link_to 'Deletar', lesson, method: :delete, data: { confirm: 'Você tem certeza?' }

%br

= link_to 'Nova lição', new_lesson_path
